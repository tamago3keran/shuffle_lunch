#js-user_index
.admin_main
  %h1 ユーザ一覧
  - @users.each do |user|
    = user.full_name
    - if user.active?
      = link_to("無効化する", admin_user_activation_path(user), method: :delete)
    - else
      = link_to("有効化する", admin_user_activation_path(user), method: :patch)
    %br
  %br
  = link_to "ユーザを作成する", new_admin_user_path
  = javascript_include_tag 'packs/user_index.bundle'
